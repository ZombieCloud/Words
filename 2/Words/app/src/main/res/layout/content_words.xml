<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".WordsActivity"
    style="@style/style_for_TextView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="shit"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.94"
            android:minHeight="350dp"
            style="@style/style_for_TextView" />    <!-- values/styles/styles -->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/firstWord"
                android:layout_weight="1"
                android:numeric="integer"
                android:singleLine="true"
                style="@style/style_for_EditText" />    <!-- values/styles/styles -->

            <EditText
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/lastWord"
                android:layout_weight="1"
                android:numeric="integer"
                android:singleLine="true"
                style="@style/style_for_EditText" />    <!-- values/styles/styles -->

            <EditText
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/currentNum"
                android:layout_weight="1"
                android:numeric="integer"
                android:singleLine="true"
                android:editable="false"
                android:inputType="none"
                android:enabled="false"
                style="@style/style_for_EditText" />    <!-- values/styles/styles -->

        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:text="Go !!!"
            android:id="@+id/button"
            android:onClick="buttonOnClick"
            android:background="@drawable/button_style"
            android:padding="15dp"/>   <!-- drawable/button_style.xml -->

    </LinearLayout>
</RelativeLayout>